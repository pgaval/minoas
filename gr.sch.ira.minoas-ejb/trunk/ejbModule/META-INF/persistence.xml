<?xml version="1.0" encoding="UTF-8"?>
<!-- Persistence deployment descriptor for dev profile -->
<persistence xmlns="http://java.sun.com/xml/ns/persistence" 
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd" 
             version="1.0">
             
   <persistence-unit name="gr.sch.ira.minoas.voids">
      <provider>org.hibernate.ejb.HibernatePersistence</provider>
      <jta-data-source>java:/gr.sch.ira.minoasDatasource</jta-data-source>
      <class>
      gr.sch.ira.minoas.model.core.Allocation</class>
      <class>
      gr.sch.ira.minoas.model.core.OrganizationUnit</class>
      <class>
      gr.sch.ira.minoas.model.core.School</class>
      <class>
      gr.sch.ira.minoas.model.core.SchoolYear</class>
      <class>
      gr.sch.ira.minoas.model.core.Secondment</class>
      <class>
      gr.sch.ira.minoas.model.core.Specialization</class>
      <class>
      gr.sch.ira.minoas.model.core.Teacher</class>
      <class>
      gr.sch.ira.minoas.model.voids.TeachingResource</class>
      <class>
      gr.sch.ira.minoas.model.voids.TeachingVoid</class>
      <properties>
         <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect"/>
         <property name="hibernate.hbm2ddl.auto" value="update"/>
         <property name="hibernate.show_sql" value="false"/>
         <property name="hibernate.format_sql" value="false"/>
         <property name="jboss.entity.manager.factory.jndi.name" value="java:/gr.sch.ira.minoasEntityManagerFactory"/>
      </properties>
   </persistence-unit>
    
</persistence>
