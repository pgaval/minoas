<?xml version="1.0" encoding="UTF-8"?>
<!-- Persistence deployment descriptor for dev profile -->
<persistence xmlns="http://java.sun.com/xml/ns/persistence" 
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd" 
             version="1.0">
             
   <persistence-unit transaction-type="JTA" name="minoas">
      
      <!-- 
      <provider>org.hibernate.ejb.HibernatePersistence</provider>
       -->
      <jta-data-source>java:/gr.sch.ira.minoasDatasource</jta-data-source>
      <class>
      gr.sch.ira.minoas.model.core.OrganizationalOffice</class>
      <class>
      gr.sch.ira.minoas.model.core.Address</class>
      <class>
      gr.sch.ira.minoas.model.core.School</class>
      <class>
      gr.sch.ira.minoas.model.core.SchoolYear</class>
      <class>
      gr.sch.ira.minoas.model.core.Specialization</class>
      <class>
      gr.sch.ira.minoas.model.employee.Employee</class>
      <class>
      gr.sch.ira.minoas.model.employee.EmployeeAssigment</class>
      <class>
      gr.sch.ira.minoas.model.employee.EmployeeSecondment</class>
      <class>
      gr.sch.ira.minoas.model.employee.RegularEmployee</class>
      <class>
      gr.sch.ira.minoas.model.employee.RegularEmployment</class>
      <class>
      gr.sch.ira.minoas.model.security.Principal</class>
      <class>
      gr.sch.ira.minoas.model.security.Role</class>
      <class>
      gr.sch.ira.minoas.model.security.RoleGroup</class>
      <class>
      gr.sch.ira.minoas.model.voids.TeachingRequirement</class>
      <class>
      gr.sch.ira.minoas.model.voids.TeachingResource</class>
      <properties>
         <!-- 
         <property name="hibernate.dialect" value="org.hibernate.dialect.SQLServerDialect"/>
          -->
         <property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect"/>
         <property name="hibernate.hbm2ddl.auto" value="update"/>
         <property name="hibernate.show_sql" value="false"/>
         <property name="hibernate.format_sql" value="false"/>
         <property name="jboss.entity.manager.factory.jndi.name" value="java:/gr.sch.ira.minoasEntityManagerFactory"/>
         <property name="hibernate.cache.provider_class" value="org.jboss.ejb3.entity.TreeCacheProviderHook"/>
         <property name="hibernate.treecache.mbean.object_name" value="jboss.cache:service=EJB3EntityTreeCache"/>
      </properties>
   </persistence-unit>
    
</persistence>
