<?xml version="1.0" encoding="UTF-8"?>
<page login-required="true" xmlns="http://jboss.com/products/seam/pages"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.1.xsd">
	<description>Εισαγωγή Άδειας Εκπαιδευτικού</description>
	<begin-conversation flush-mode="manual" join="true" />
	<param name="add_new_leave_from" />
	<!-- navigation rules -->
	<navigation from-action="#{leaveHome.persist()}">
		<rule if-outcome="persisted">
			<end-conversation />
			<redirect
				view-id="#{empty add_new_leave_from ? '/home' : add_new_leave_from}" />
		</rule>
	</navigation>
	<navigation from-action="backButton">
		<end-conversation />
		<redirect view-id="#{empty add_new_leave_from ? '/home' : add_new_leave_from}" />
	</navigation>
</page>
 