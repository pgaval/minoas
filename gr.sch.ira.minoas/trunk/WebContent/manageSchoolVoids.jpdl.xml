<?xml version="1.0" encoding="UTF-8"?>

<pageflow-definition name="manageSchoolVoids">

  <start-state name="start">
    <transition to="has school ?" />
  </start-state>

  <decision name="has school ?" expression="#{manageSchoolVoids.hasSchool()}">
    <transition name="true" to="manageSchoolVoids" />
      <action expression="#{manageSchoolVoids.searchTeachingVoids()}" />
    <transition name="false" to="selectSchool">
      <action expression="#{schoolSearch.schoolSearch()}" />
    </transition>
  </decision>
    
  <page name="selectSchool" view-id="/schoolSearch.xhtml">
    <redirect />
    <transition name="selectSchool" to="manageSchoolVoids">
      <action expression="#{manageSchoolVoids.setSchool(school)}" />
    </transition>
  </page>   
  
  <page name="manageSchoolVoids" view-id="/manageSchoolVoids.xhtml">
    <redirect />
    <transition name="cancel" to="home">
      <action expression="#{manageSchoolVoids.cancel}" />
    </transition>
    <transition name="changeSchool" to="selectSchool">
      <action expression="#{schoolSearch.schoolSearch()}" />
    </transition>
    <transition name="selectVoid" to="updateVoid">
      <action expression="#{manageVoid.beginUpdateExistingTeachingVoid(teachingVoid)}" />
    </transition>
  </page>
  
  <page name="home" view-id="/home.xhtml">
    <redirect />
  </page>
  
  <page name="updateVoid" view-id="/updateTeachingVoid.xhtml">
    <redirect />
  </page>
  
  
</pageflow-definition>