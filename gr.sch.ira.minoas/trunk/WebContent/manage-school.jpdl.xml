<?xml version="1.0" encoding="UTF-8"?>

<pageflow-definition xmlns="http://jboss.com/products/seam/pageflow"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://jboss.com/products/seam/pageflow http://jboss.com/products/seam/pageflow-2.0.xsd" name="manage-school">

  <start-page name="schoolSearch" view-id="/schoolSearch.xhtml">
  
  </start-page>
  
  <start-state name="start">
    <transition to="has school ?" />
  </start-state>

  <decision name="has school ?" expression="#{school ne null}">
    <transition name="true" to="manageSchoolVoids">
      <action expression="#{voidManagement.searchTeachingVoids()}" />
    </transition>

    <transition name="false" to="selectSchool">
      <action expression="#{school.schoolSearch()}" />
    </transition>
  </decision>

  <page name="selectSchool" view-id="/schoolSearch.xhtml">
    <redirect />
    <transition name="selectSchool" to="manageSchoolVoids">
      <action expression="#{schoolSearch.selectSchool(school)}" />
      <action expression="#{voidManagement.searchTeachingVoids()}" />
    </transition>
  </page>   
  
  <page name="manageSchoolVoids" view-id="/manageSchoolVoids.xhtml">
    <redirect />
    <transition name="cancel" to="home">
      <action expression="#{voidManagement.cancel}" />
    </transition>
    <transition name="changeSchool" to="selectSchool">
      <action expression="#{schoolSearch.schoolSearch()}" />
    </transition>
    <transition name="selectVoid" to="updateVoid">
      <action expression="#{voidManagement.beginUpdateExistingTeachingVoid(teachingVoid)}" />
    </transition>
  </page>
  
  <page name="home" view-id="/home.xhtml">
    <redirect />
  </page>
  
  <page name="updateVoid" view-id="/updateTeachingVoid.xhtml">
    <redirect />
    <transition name="cancel" to="manageSchoolVoids">
      <action expression="#{voidManagement.searchTeachingVoids()}" />
    </transition>
    <transition name="delete" to="manageSchoolVoids">
      <action
        expression="#{voidManagement.removeExistingTeachingVoid()}" />
      <action expression="#{voidManagement.searchTeachingVoids()}" />
    </transition>
    <transition name="save" to="manageSchoolVoids">
      <action
        expression="#{voidManagement.saveExistingTeachingVoid()}" />
      <action expression="#{voidManagement.searchTeachingVoids()}" />
    </transition>
    <transition name="addTeachingHours" to="updateVoid">
       <action expression="#{voidManagement.addTeachingResource()}" />
    </transition>
    <transition name="removeTeachingHours" to="updateVoid">
      <action expression="#{voidManagement.removeTeachingResource(teachingResource)}" />
    </transition>
  </page>
  
  
</pageflow-definition>