<?xml version="1.0" encoding="UTF-8"?>
<pageflow-definition
    xmlns="http://jboss.com/products/seam/pageflow"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://jboss.com/products/seam/pageflow http://jboss.com/products/seam/pageflow-2.0.xsd"
    name="new-principal">
    
    <start-page view-id="/principals.xhtml" name="home">
        <transition name="start" to="core-data">
            
        </transition>
    </start-page>
    
    <page view-id="/editPrincipal.xhtml" name="core-data">
        <redirect />
        <transition name="cancel" to="end">
            <action name="cancel" expression="#{principalAdmin.cancelPrincipal()}" />
        </transition>
        <transition name="save" to="end">
            <action name="save" expression="#{principalAdmin.savePrincipal()}" />
        </transition>
    </page>

    <page view-id="/principals.xhtml" name="end">
        <end-conversation/>
        <redirect />
    </page>
    
</pageflow-definition>